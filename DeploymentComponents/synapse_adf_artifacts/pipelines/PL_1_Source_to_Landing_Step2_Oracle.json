            },
            {
                "name": "Update Logging Record For Success",
                "type": "Lookup",
                "dependsOn": [
                    {
                        "activity": "If New Data",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "0.12:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false

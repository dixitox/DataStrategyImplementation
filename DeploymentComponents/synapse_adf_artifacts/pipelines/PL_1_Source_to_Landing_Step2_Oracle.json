                                    "userProperties": [],
                                    "typeProperties": {
                                        "variableName": "rows_copied_count",
                                        "value": {
                                            "value": "@string(activity('Copy With No Source Partitioning').output.rowsCopied)",
                                            "type": "Expression"
                                        }
                                    }

                "userProperties": [],
                "typeProperties": {
                    "variableName": "filename_w_timestamp",
                    "value": {
                        "value": "@replace(pipeline().parameters.outputFileName\n        ,'YYYYMMDDHHMMSS'\n        ,concat(\n            formatDateTime(utcnow(),'yyyy')\n            ,formatDateTime(utcnow(),'MM')\n            ,formatDateTime(utcnow(),'dd')\n            ,formatDateTime(utcnow(),'HH')\n            ,formatDateTime(utcnow(),'mm')\n            ,formatDateTime(utcnow(),'ss')\n         )   \n)",
                        "type": "Expression"
                    }
                }
            },
            {
                "name": "FolderPath with Timestamp",
                "type": "SetVariable",
                "dependsOn": [
